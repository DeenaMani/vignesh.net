<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - MyIncomeExpenseApp</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyIncomeExpenseApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/vendor/fontawesome-free/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/sb-admin-2.min.css" asp-append-version="true" />
     <link href="~/assetsvendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

@if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
{
    <body id="page-top">
        <div id="wrapper">
            @{
                await Html.RenderPartialAsync("sideBar");
            }
            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    @{
                        await Html.RenderPartialAsync("header");
                    }
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
                <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © 2021</span>
                    </div>
                </div>
            </footer>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/assets/js/sb-admin-2.min.js"></script>
        <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
}
else
{
    <body class="bg-gradient-primary">
        <div class="container">
            @RenderBody()
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/assets/vendor/jquery/jquery.min.js"></script>
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/assets/js/sb-admin-2.min.js"></script>
        <script src="~/assets/vendor/chart.js/Chart.min.js"></script>
        <script src="~/assets/js/demo/chart-area-demo.js"></script>
        <script src="~/assets/js/demo/chart-pie-demo.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
}
</html>
